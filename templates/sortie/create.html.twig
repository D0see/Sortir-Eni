{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}


{% block title %}
    Créer une sortie
{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4 text-center">Créer une sortie</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row g-3">
                    <!-- Colonne de gauche -->
                    <div class="col-md-6">
                        {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.dateHeureDebut, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.dateLimiteInscription, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.nbInscriptionsMax, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.dureeEnHeures, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.infosSortie, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                    </div>

                    <!-- Colonne de droite -->
                    <div class="col-md-6">
                        {{ form_row(form.site, {'attr': {'class': 'form-select'}}) }}

                        <div class="mb-3">
                            <label class="form-label d-flex justify-content-between align-items-center">
                                {{ form_label(form.lieu) }}
                                <a href="#" class="btn btn-sm btn-outline-secondary">+</a>
                            </label>
                            {{ form_widget(form.lieu, {'attr': {'class': 'form-select'}}) }}
                        </div>

                        {{ form_row(form.dateOuverture, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.motifAnnulation, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.etat, {'attr': {'class': 'form-select'}}) }}
                        {{ form_row(form.organisateur, {'attr': {'class': 'form-select'}}) }}
                        {{ form_row(form.participants, {'attr': {'class': 'form-select', 'multiple': true}}) }}
                    </div>
                </div>

                <!-- Boutons -->
                <div class="mt-4  btn-group"  role="group">
                    <button type="submit"  class="btn btn-primary ">Enregistrer</button>
                    <button type="submit" name="publish" value="1" class="btn btn-success">Publier la sortie</button>
                    <a href="{{ path('sortie_list') }}" class="btn btn-secondary">Annuler</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
