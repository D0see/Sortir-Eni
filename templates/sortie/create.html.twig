{% extends 'base.html.twig' %}

{% block title %}
    Créer une sortie
{% endblock %}

{% block body %}
    <h1 class="mb-4">Créer une sortie</h1>

    {{ form_start(form) }}
    <div class="row">
        <!-- Colonne de gauche -->
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.dateHeureDebut) }}
                {{ form_widget(form.dateHeureDebut, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.dateLimiteInscription) }}
                {{ form_widget(form.dateLimiteInscription, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.nbInscriptionsMax) }}
                {{ form_widget(form.nbInscriptionsMax, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.dureeEnHeures) }}
                {{ form_widget(form.dureeEnHeures, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.infosSortie) }}
                {{ form_widget(form.infosSortie, {'attr': {'class': 'form-control', 'rows': 3}}) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.site) }}
                {{ form_widget(form.site, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="mb-3">
                <label class="form-label">
                    {{ form_label(form.lieu) }}
                    <!-- Bouton + (ex. pour créer un nouveau lieu) -->
                    <a href="#" class="btn btn-sm btn-outline-secondary">+</a>
                </label>
                {{ form_widget(form.lieu, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.dateOuverture) }}
                {{ form_widget(form.dateOuverture, {'attr': {'class': 'form-control'}}) }}
            </div>


            <div class="mb-3">
                {{ form_label(form.motifAnnulation) }}
                {{ form_widget(form.motifAnnulation, {'attr': {'class': 'form-control'}}) }}
            </div>


            <div class="mb-3">
                {{ form_label(form.etat) }}
                {{ form_widget(form.etat, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.organisateur) }}
                {{ form_widget(form.organisateur, {'attr': {'class': 'form-select'}}) }}
            </div>

            <div class="mb-3">
              {{ form_label(form.participants) }}
              {{ form_widget(form.participants, {'attr': {'class': 'form-select', 'multiple': true}}) }}
            </div>


        </div>
    </div>

    <div class="mt-3">
        <!-- Bouton Enregistrer -->
        <button type="submit" class="btn btn-primary me-2">Enregistrer</button>

        <!-- Exemple si vous voulez un bouton "Publier la sortie" -->
        <button type="submit" class="btn btn-success me-2" name="publish" value="1">
            Publier la sortie
        </button>

        <!-- Bouton Annuler -->
        <a href="{{ path('sortie_list') }}" class="btn btn-secondary">Annuler</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
