{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}
    Créer une sortie
{% endblock %}

{% block body %}
    <h1 class="mb-4 text-center">Créer une sortie</h1>
        <div class="card shadow-sm">
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row g-3">
                    <div class="col-md-6">
                        {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.site, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.nbInscriptionsMax, {'attr': {'class': 'form-control'}}) }}
                    </div>


                    <div class="col-md-6">
                        {{ form_row(form.infosSortie, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                        <div class="mb-3">
                            <label class="justify-content-between align-items-center">
                                {{ form_label(form.lieu) }}
                            </label>
                            <div style ="display : flex; gap : 5px">
                                {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
                                <a style ="font-size: 20px" href="{{ path("add_lieu") }}" class="btn btn-sm btn-outline-secondary">+</a>
                            </div>
                            {{ form_errors(form.lieu) }}
                        </div>
                    </div>

                </div>


                <div class="card shadow-sm mt-3">
                    <div class="card-body">
                        <div class="row g-3">

                            <div class="col-md-6">
                                {{ form_row(form.dureeEnHeures, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.dateHeureDebut, {'attr': {'class': 'form-control', 'min': date()|date('Y-m-d')}}) }}
                            </div>
                        </div>

                        <div class="row g-3 mt-3">

                            <div class="col-md-6">
                                {{ form_row(form.dateOuverture, {'attr': {'class': 'form-control', 'min': date()|date('Y-m-d')}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.dateLimiteInscription, {'attr': {'class': 'form-control', 'min': date()|date('Y-m-d')}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Boutons -->
                <div class="mt-4 btn-group" role="group" style="display: inline-block; gap: 8px">
                    <button type="submit" name="publish" value="1" class="btn btn-primary">Publier la sortie</button>
                    <a href="{{ path('sortie_list') }}" class="btn btn-primary btn-cancel">Annuler</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    <style>
        .invalid-feedback {
            display: block !important;
            color: red;
        }
    </style>

{% endblock %}
