{% extends 'base.html.twig' %}

{% block title %}
    Modifier une ville
{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="mb-4">Ajouter une nouvelle ville</h1>
                <div class="card">

                    <div class="card-body">
                        {{ form_start(villeForm, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            {{ form_label(villeForm.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(villeForm.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(villeForm.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(villeForm.codePostal, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(villeForm.codePostal, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(villeForm.codePostal) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <a href="{{ path('ville_list') }}" class="btn btn-secondary">Annuler</a>
                        </div>
                        {{ form_end(villeForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
