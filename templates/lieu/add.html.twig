{% extends 'base.html.twig' %}

{% block title %}Ajout d'un lieu{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="mb-4 text-center">Ajouter un nouveau lieu</h1>
                <div class="card">

                    <div class="card-body">
                        {{ form_start(lieuForm, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            {{ form_label(lieuForm.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(lieuForm.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(lieuForm.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(lieuForm.rue, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(lieuForm.rue, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(lieuForm.rue) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(lieuForm.latitude, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(lieuForm.latitude, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(lieuForm.latitude) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(lieuForm.longitude, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(lieuForm.longitude, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(lieuForm.longitude) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(lieuForm.ville, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(lieuForm.ville, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(lieuForm.ville) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <a href="{{ path('lieu_list') }}" class="btn btn-primary btn-cancel">Annuler</a>
                        </div>
                        {{ form_end(lieuForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
