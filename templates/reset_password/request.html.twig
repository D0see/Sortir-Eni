{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Mot de passe oublié</h1>

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="card shadow-sm">
                    <div class="card-body">
                        <p>Veuillez saisir votre pseudo pour réinitialiser votre mot de passe</p>

                        {{ form_start(requestForm) }}
                        <div class="mb-3">
                            {{ form_label(requestForm.pseudo, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(requestForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(requestForm.pseudo) }}
                        </div>

                        <button type="submit" class="btn btn-primary">Envoyer</button>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



