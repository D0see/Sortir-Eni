{% extends 'base.html.twig' %}

{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Inscription d'un participant{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="margin-top: 20px;">
        <div class="card shadow p-4" style="width: 500px;">
            <h2 class="text-center mb-4">📝 Inscription</h2>

            {% if registrationForm.vars.errors|length > 0 %}
                <div class="alert alert-danger">
                    {{ form_errors(registrationForm) }}
                </div>
            {% endif %}

            {{ form_start(registrationForm) }}

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="{{ registrationForm.mail.vars.id }}" class="form-label">📧 Email</label>
                    {{ form_widget(registrationForm.mail, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-md-6">
                    <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">🔒 Mot de passe</label>
                    {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="{{ registrationForm.prenom.vars.id }}" class="form-label">👤 Prénom</label>
                    {{ form_widget(registrationForm.prenom, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-md-6">
                    <label for="{{ registrationForm.nom.vars.id }}" class="form-label">👤 Nom</label>
                    {{ form_widget(registrationForm.nom, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="{{ registrationForm.pseudo.vars.id }}" class="form-label">👤 Pseudo</label>
                    {{ form_widget(registrationForm.pseudo, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-md-6">
                    <label for="{{ registrationForm.telephone.vars.id }}" class="form-label">📞 Téléphone</label>
                    {{ form_widget(registrationForm.telephone, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-md-6 check">
                    {{ form_widget(registrationForm.administrateur, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-md-6 check">
                    {{ form_widget(registrationForm.actif, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="row mb-3">
                <label for="{{ registrationForm.maPhoto.vars.id }}" class="form-label">Photo de profil</label>
                {{ form_widget(registrationForm.maPhoto, { 'attr': {'class': 'form-control separate-elements'} }) }}
            </div>

            <div class="col-md-6">
                <label for="{{ registrationForm.site.vars.id }}" class="form-label">🗺️ {{ form_label(registrationForm.site) }}</label>
                {{ form_widget(registrationForm.site, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <br>


            <button type="submit" class="btn btn-primary w-100">Inscrire</button>
            {{ form_end(registrationForm) }}


        </div>
    </div>
{% endblock %}
